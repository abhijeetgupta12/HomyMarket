<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#FFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".HomePage"
    tools:showIn="@layout/app_bar_main">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">

              <androidx.cardview.widget.CardView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:elevation="10dp"
                     app:cardElevation="10dp"
                     android:outlineSpotShadowColor="#525650"
                     app:cardCornerRadius="9dp">

                          <AutoCompleteTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawableLeft="@drawable/search"
                                    android:drawablePadding="15dp"
                                    android:textColor="#525650"
                                    android:fontFamily="@font/allcategoriesfont"
                                    android:hint="Search here..."/>

              </androidx.cardview.widget.CardView>


              <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:background="#FFF">

                    <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:orientation="vertical"
            android:background="#FFF"
            android:gravity="center">

            <ImageButton
                android:layout_width="40dp"
                android:paddingRight="30dp"
                android:paddingLeft="30dp"
                app:srcCompat="@drawable/ic_format_list_bulleted_black_24dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.6"
                android:background="@drawable/buttonshape"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="All Categories"
                android:textColor="#000"
                android:fontFamily="@font/allcategoriesfont"/>

        </LinearLayout>

                    <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="0dp"
                android:layout_weight="1.6"
                android:background="@drawable/womensection"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Women"
                android:textColor="#000"
                android:fontFamily="@font/allcategoriesfont"/>

        </LinearLayout>

                    <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="0dp"
                android:layout_weight="1.6"
                android:background="@drawable/mansection"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Men"
                android:textColor="#000"
                android:fontFamily="@font/allcategoriesfont"/>

        </LinearLayout>

                    <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="55dp"
                android:layout_height="0dp"
                android:layout_weight="1.6"
                android:background="@drawable/kidssection"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kids"
                android:textColor="#000"
                android:fontFamily="@font/allcategoriesfont"/>
        </LinearLayout>

              </LinearLayout>




              <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:id="@+id/linearslider"
        >

        <androidx.viewpager.widget.ViewPager
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/viewpager">

        </androidx.viewpager.widget.ViewPager>

    </LinearLayout>


              <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@drawable/gradientbackground"
         android:padding="17dp"
            >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/todaysdeal"
            android:padding="10dp"
            android:background="@drawable/gradientbackground"
            android:gravity="center"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Today's deal"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="@color/sideone"
                android:fontFamily="@font/abc"/>

        </LinearLayout>

        </LinearLayout>



         </LinearLayout>

    </ScrollView>



</LinearLayout>



