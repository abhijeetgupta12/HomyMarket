<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.DeliveryAdress">

  <LinearLayout

      android:orientation="vertical"
      android:weightSum="10"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <ScrollView
          android:layout_weight="9"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <LinearLayout
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


              <TextView
                  android:textColor="#000"
                  android:fontFamily="sans-serif-condensed"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:text="Your Bill"
                  android:textSize="40sp"
                  android:textStyle="bold"/>

              <LinearLayout
                  android:layout_marginStart="8dp"
                  android:layout_marginEnd="8dp"
                  android:orientation="horizontal"
                  android:layout_marginTop="40dp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

                  <TextView
                      android:textColor="#000"
                      android:fontFamily="sans-serif-condensed"
                      android:textSize="24sp"
                      android:text="Net Price:"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content" />

                  <TextView
                      android:textColor="#000"
                      android:fontFamily="sans-serif-condensed"
                      android:gravity="end"
                      android:id="@+id/tot_price"
                      android:textSize="24sp"
                      android:text="..."
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content" />

              </LinearLayout>

              <LinearLayout
                  android:paddingStart="8dp"
                  android:paddingEnd="8dp"
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

                  <TextView
                      android:textColor="#000"
                      android:fontFamily="sans-serif-condensed"
                      android:textSize="24sp"
                      android:text="Delivary Charge:"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content" />

                  <TextView
                      android:textColor="#000"
                      android:fontFamily="sans-serif-condensed"
                      android:gravity="end"
                      android:id="@+id/delivary_charge"
                      android:textSize="24sp"
                      android:text="..."
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content" />

              </LinearLayout>


              <View
                  android:paddingStart="8dp"
                  android:paddingEnd="8dp"
                  android:layout_marginTop="20dp"
                  android:layout_width="match_parent"
                  android:layout_height="2dp"
                  android:background="@color/buttoncolor"/>

              <LinearLayout
                  android:paddingStart="8dp"
                  android:paddingEnd="8dp"
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

                  <TextView
                      android:textColor="#000"
                      android:fontFamily="sans-serif-condensed"
                      android:textSize="24sp"
                      android:text="Total"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content" />

                  <TextView
                      android:textColor="#000"
                      android:fontFamily="sans-serif-condensed"
                      android:gravity="end"
                      android:id="@+id/PayingAmount"
                      android:textSize="24sp"
                      android:text="..."
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content" />

              </LinearLayout>



              <TextView
                  android:textColor="#000"
                  android:fontFamily="sans-serif-condensed"
                  android:layout_marginTop="24dp"
                  android:textSize="24sp"
                  android:textStyle="bold"
                  android:gravity="center"
                  android:text="Your Billing Address"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content" />

              <TextView
                  android:paddingStart="8dp"
                  android:paddingEnd="8dp"
                  android:layout_marginTop="24dp"
                  android:fontFamily="sans-serif-condensed"
                  android:text="Loading Plz...Wait...."
                  android:id="@+id/name"
                  android:textSize="24sp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />

              <TextView
                  android:paddingStart="8dp"
                  android:paddingEnd="8dp"
                  android:fontFamily="sans-serif-condensed"
                  android:text="Loading Plz...Wait...."
                  android:id="@+id/area"
                  android:textSize="24sp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />

              <TextView
                  android:paddingStart="8dp"
                  android:paddingEnd="8dp"
                  android:fontFamily="sans-serif-condensed"
                  android:text="Loading Plz...Wait...."
                  android:id="@+id/pin"
                  android:textSize="24sp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />

              <TextView
                  android:paddingStart="8dp"
                  android:paddingEnd="8dp"
                  android:fontFamily="sans-serif-condensed"
                  android:text="Loading Plz...Wait...."
                  android:id="@+id/landmark"
                  android:textSize="24sp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />

              <TextView
                  android:textStyle="bold"
                  android:gravity="center"
                  android:paddingStart="8dp"
                  android:textColor="#000"
                  android:fontFamily="sans-serif-condensed"
                  android:text="Select Delivary Slot"
                  android:textSize="24sp"
                  android:layout_marginTop="24dp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content" />

              <RelativeLayout
                  android:background="@drawable/spinner_bg"
                  android:layout_marginTop="20dp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginRight="3dp"
                  android:orientation="horizontal">

                  <Spinner
                      android:id="@+id/days"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_centerVertical="true"
                      android:layout_gravity="center"
                      android:background="@android:color/transparent"
                      android:gravity="center"
                      android:layout_marginLeft="5dp"
                      android:spinnerMode="dropdown" />

                  <ImageView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentRight="true"
                      android:layout_centerVertical="true"
                      android:layout_gravity="center"
                      android:src="@drawable/drop" />

              </RelativeLayout>

              <RelativeLayout
                  android:layout_marginTop="20dp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginRight="3dp"
                  android:background="@drawable/spinner_bg"
                  android:orientation="horizontal">

                  <Spinner
                      android:id="@+id/time"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_centerVertical="true"
                      android:layout_gravity="center"
                      android:background="@android:color/transparent"
                      android:gravity="center"
                      android:layout_marginLeft="5dp"
                      android:spinnerMode="dropdown" />

                  <ImageView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentRight="true"
                      android:layout_centerVertical="true"
                      android:layout_gravity="center"
                      android:src="@drawable/drop" />

              </RelativeLayout>



              <TextView
                  android:paddingStart="8dp"
                  android:textColor="#000"
                  android:fontFamily="sans-serif-condensed"
                  android:text="*You can change your address from My Account section"
                  android:textSize="18sp"
                  android:layout_marginTop="24dp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content" />

          </LinearLayout>


      </ScrollView>

      <LinearLayout
          android:layout_weight="1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <Button
              android:id="@+id/orderNow"
              android:textStyle="bold"
              android:textColor="#fff"
              android:background="@color/buttoncolor"
              android:text="Order Now"
              android:layout_gravity="bottom"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" />

      </LinearLayout>




  </LinearLayout>


</FrameLayout>